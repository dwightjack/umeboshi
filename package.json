{
  "name": "umeboshi",
  "private": true,
  "author": "Marco Solazzi @dwightjack",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=6.9.0"
  },
  "bugs": "https://github.com/dwightjack/umeboshi/issues",
  "keywords": [
    "umeboshi"
  ],
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "~13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "~2.14.0",
    "eslint-plugin-node": "^7.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^22.0.0",
    "lerna": "^3.4.3",
    "prettier": "^1.14.3",
    "stylelint": "^9.0.0",
    "webpack": "^4.8.3"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "collectCoverageFrom": [
      "**/packages/umeboshi-*/**/*.js",
      "**/packages/eslint-*/**/*.js",
      "**/packages/babel-*/**/*.js",
      "!**/bin/**",
      "!**/__mocks__/**",
      "!**/__tests__/**"
    ],
    "collectCoverage": false,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
