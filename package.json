{
  "name": "umeboshi",
  "private": true,
  "author": "Marco Solazzi @dwightjack",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=6.9.0"
  },
  "bugs": "https://github.com/dwightjack/umeboshi/issues",
  "keywords": [
    "umeboshi"
  ],
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "12.0.2",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^21.0.0",
    "lerna": "^2.4.0",
    "stylelint": "^8.0.0",
    "webpack": "^3.0.0"
  },
  "jest": {
    "verbose": true,
    "bail": false,
    "collectCoverageFrom": [
      "**/packages/umeboshi-*/**/*.js",
      "**/packages/eslint-*/**/*.js",
      "**/packages/babel-*/**/*.js",
      "!**/bin/**",
      "!**/__mocks__/**",
      "!**/__tests__/**"
    ],
    "collectCoverage": false,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
